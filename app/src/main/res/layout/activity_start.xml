<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.tomaszkrol.viewstate.ui.activity.StartActivity"
>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
    >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:title="View State Library Demo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
        />

    </android.support.design.widget.AppBarLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewData"
        android:onClick="startViewStateDemo"
    />

    <Button
        android:id="@+id/activityBuilder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startActivityArgs"
        android:text="Activity Builder"
    />

    <Button
        android:id="@+id/fragmentBuilder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startFragmentArgs"
        android:text="Fragment Builder"
    />

    <Button
        android:id="@+id/activityArgModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Screen Model Builder"
        android:onClick="startModelArgs"
    />

</LinearLayout>
